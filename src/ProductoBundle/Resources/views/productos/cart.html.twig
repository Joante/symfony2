{% extends 'base.html.twig' %}

{% block body %}
	<div class="checkout-summary">
  		<div class="checkout-summary-title">
	    	<h5>Su Pedido: </h5>
	    	<h5>{echocount()} Items</h5>
 		</div>
 		{% for producto in productos %}
 		{}
  		<div class="checkout-summary-item">
		    <img src="https://placeimg.com/100/80/any">
		    <div class="item-name">
		    	<a>{{producto['name']}}</a>
		    </div>
		    <div class="item-price">
		   		<p class="title">${{producto.getPrice()}}</p>
		      	<a href="#">Remove</a>
		    </div>
		</div>
		{%endfor%}
    <div class="right">
      <p>$10.99</p>
      <p>$2.00</p>
      <p>$12.99</p>
    </div>
  </div>
  <button class="button expanded">Proceder al Pago</button>
</div>


{% endblock %}